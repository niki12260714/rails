<% up = User.find_by(id: current_user.id) %>
<% if up.provider != "twitter"  %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :password %> <i>(パスワードを変更しない場合は空白のままにしてください)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    
    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, autocomplete: "off" %>
    </div>
    
    <div class="field">
      <%= f.label :system_id %><br />
      <%= f.text_field :system_id, autocomplete: "off" %>
    </div>
  
    <div class="field">
      <%= f.label :current_password %> <i>(プロフィール変更時は現在使用中のパスワード入力が必須です)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  
    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
<% end %>

<h3>アカウント削除</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "アカウント削除後はログインできなくなります。よろしいですか？" }, method: :delete %></p>
