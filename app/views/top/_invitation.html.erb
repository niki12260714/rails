<div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">【<%= @group.group_name %>】参加確認</h4>
      </div>
      <div class="modal-body">
        イベント名：<%= @group.group_name %><br />
        開催日：<%= l(@group.purchase_day.to_date, format: :default) %><br />
        備考：<br />
        <%= @group.group_memo %>
      </div>
      <div class="modal-footer">
        <%= link_to '参加', top_join_path + '/' + params[:gm_id], method: :post, class:"btn btn-primary" %>
        <%= link_to '拒否', top_reject_path + '/' + params[:gm_id], method: :post, class:"btn btn-danger" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
  </div>
</div>